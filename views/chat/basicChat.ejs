                    <div class="loaderDiv"> <div class="wheel"></div></div>
                  
                   
                </div>
            <!--My Users Populate Here div class="userOnline"-->
            </div>
      <div class="inputBar">
            <input id="chatInput" autocomplete="off" /><button id="submitChat">Send</button>
        </div>
        <div id="chat">
        
            <div id="messages"> </div>
        </div>
